<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MyPal.MauiApp.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Button x:Name="_button" Text="Insult Me" Clicked="Button_Clicked" />
        <ActivityIndicator x:Name="_indicator" IsRunning="False" />
        <Image x:Name="_image" Grid.Row="1" Source="koala_yawn.gif" IsAnimationPlaying="True" />
        <toolkit:CameraView
            x:Name="_camera"
            Grid.Row="2"
            ImageCaptureResolution="150,200"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="10"
            WidthRequest="150"
            HeightRequest="200"
            BackgroundColor="Transparent"
            MediaCaptured="OnMediaCaptured"
            MediaCaptureFailed="OnMediaCaptureFailed"
        />
    </Grid>

</ContentPage>
