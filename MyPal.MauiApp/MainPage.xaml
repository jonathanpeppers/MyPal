<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MyPal.MauiApp.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Button x:Name="_insultButton" Text="Insult Me" Clicked="Insult_Clicked" Margin="5" />
        <Button x:Name="_complimentButton" Text="Compliment Me" Clicked="Compliment_Clicked" Grid.Row="1" Margin="5" />
        <Image x:Name="_image" Grid.Row="2" Source="koala_yawn.gif" IsAnimationPlaying="True" />
    </Grid>

</ContentPage>
