<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MyPal.MauiApp.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button x:Name="_button" Text="Insult Me" Clicked="Button_Clicked" />
        <toolkit:CameraView
            x:Name="_camera"
            Grid.Row="1"
            ImageCaptureResolution="200,150"
            WidthRequest="200"
            BackgroundColor="Transparent"
            MediaCaptured="OnMediaCaptured"
            MediaCaptureFailed="OnMediaCaptureFailed"
        />
        <ActivityIndicator x:Name="_indicator" Grid.Row="1" IsRunning="False" />
    </Grid>

</ContentPage>
